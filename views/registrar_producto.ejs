<%-include("template/head",{Title:"productos"})%>
<div class="container">
    <h1 class="text-center">Registrar usuarios</h1>
    <div class="row">
        <div class="col-12 col-sm-1 col-md-2 col-xl-2"></div>
        <div class="col-12 col-sm-10 col-md-8 border col-xl-8">
            <form action="/productos" method="POST">
                <input type="text" placeholder="Ingresa nombre" class="form-control my-2" name="nombre">
                <input type="text" placeholder="Ingresa marca" class="form-control my-2" name="marca">
                <input type="number" placeholder="Ingresa precio" class="form-control my-2" name="precio">
                <button class="btn btn-success btn-block" type="submit">Registrar</button>
                <a href="/productos" class="btn btn-primary btn-block">Volver a la tabla</a>
            </form>
        </div>
        <div class="col-12 col-sm-1 col-md-2 col-xl-2"></div>
</div>
<%-include("template/footer")%>